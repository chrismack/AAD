<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chris.coursework">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".login.LoginView"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".setup.SetupView"
            android:screenOrientation="landscape" />
        <activity
            android:name=".selection.create.CreatePatientView"
            android:noHistory="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".selection.tests.TestSelectionView"
            android:noHistory="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".selection.existing.ExistingPatientView"
            android:noHistory="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".selection.tests.games.tmt.TrailMakingView"
            android:adjustViewBounds="true"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".selection.tests.games.dm.DotMatrixView"
            android:screenOrientation="landscape" />
        <activity
            android:name=".selection.tests.games.compass.Compass"
            android:screenOrientation="portrait" />
        <activity
            android:name=".selection.tests.games.rsr.RoadSignRecognition"
            android:screenOrientation="landscape" />
        <activity
            android:name=".selection.tests.games.truckCarMatrix.truckCarMatrix"
            android:screenOrientation="portrait" />
        <activity
            android:name=".selection.tests.review.ReviewView"
            android:screenOrientation="landscape" />
    </application>

</manifest>